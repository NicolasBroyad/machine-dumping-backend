// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  rolId     Int

  rol       Rol      @relation(fields: [rolId], references: [id])
  client    Client?
  company   Company?
}

model Rol {
  id    Int     @id @default(autoincrement())
  name  String  @unique

  users User[]
}

model Client {
  id           Int                   @id @default(autoincrement())
  userId       Int                   @unique

  user         User                  @relation(fields: [userId], references: [id])
  memberships  ClientEnvironment[]   // Relación a múltiples entornos
  registers    Register[]
}

model ClientEnvironment {
  id            Int         @id @default(autoincrement())
  clientId      Int
  environmentId Int
  points        Int         @default(0)  // Puntos específicos por entorno
  joinedAt      DateTime    @default(now())

  client        Client      @relation(fields: [clientId], references: [id])
  environment   Environment @relation(fields: [environmentId], references: [id])

  @@unique([clientId, environmentId]) // Un cliente solo puede unirse una vez a cada entorno
}

model Company {
  id            Int           @id @default(autoincrement())
  userId        Int           @unique

  user          User          @relation(fields: [userId], references: [id])
  environments  Environment[]
  registers     Register[]
}

model Environment {
  id        Int                   @id @default(autoincrement())
  name      String
  companyId Int

  company   Company               @relation(fields: [companyId], references: [id])
  products  Product[]
  members   ClientEnvironment[]   // Clientes miembros a través de tabla intermedia
  registers Register[]
}

model Product {
  id            Int          @id @default(autoincrement())
  name          String
  price         Float
  barcode       String
  environmentId Int
  environment   Environment  @relation(fields: [environmentId], references: [id])
  registers     Register[]

  @@unique([barcode, environmentId]) // Único por entorno
  @@map("products")
}

model Register {
  id           Int         @id @default(autoincrement())
  datetime     DateTime    @default(now())
  price        Float       @default(0) // Precio histórico al momento de la compra

  productId    Int
  product      Product     @relation(fields: [productId], references: [id])

  environmentId Int
  environment   Environment @relation(fields: [environmentId], references: [id])

  clientId     Int
  client       Client      @relation(fields: [clientId], references: [id])

  companyId    Int
  company      Company     @relation(fields: [companyId], references: [id])
}