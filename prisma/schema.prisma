// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  rolId     Int

  rol       Rol      @relation(fields: [rolId], references: [id])
  client    Client?
  company   Company?
}

model Rol {
  id    Int     @id @default(autoincrement())
  name  String  @unique

  users User[]
}

model Client {
  id           Int        @id @default(autoincrement())
  userId       Int        @unique
  points       Int        @default(0)

  environmentId Int?
  environment   Environment? @relation(fields: [environmentId], references: [id])

  user         User       @relation(fields: [userId], references: [id])
  registers    Register[]
}

model Company {
  id            Int           @id @default(autoincrement())
  userId        Int           @unique

  user          User          @relation(fields: [userId], references: [id])
  environments  Environment[]
  registers     Register[]
}

model Environment {
  id        Int        @id @default(autoincrement())
  name      String
  companyId Int

  company   Company    @relation(fields: [companyId], references: [id])
  products  Product[]
  clients   Client[]
  registers Register[]
}

model Product {
  id            Int          @id @default(autoincrement())
  name          String
  price         Float
  barcode       String
  environmentId Int
  environment   Environment  @relation(fields: [environmentId], references: [id])
  registers     Register[]

  @@unique([barcode, environmentId]) // Ãšnico por entorno
  @@map("products")
}

model Register {
  id           Int         @id @default(autoincrement())
  datetime     DateTime    @default(now())

  productId    Int
  product      Product     @relation(fields: [productId], references: [id])

  environmentId Int
  environment   Environment @relation(fields: [environmentId], references: [id])

  clientId     Int
  client       Client      @relation(fields: [clientId], references: [id])

  companyId    Int
  company      Company     @relation(fields: [companyId], references: [id])
}